@model IEnumerable<outfit_project.Models.seller>

@{
    ViewBag.Title = "Index";
}

<h2>Vendedores</h2>

<form class="col s6">
    <div class="row">
        <div class="input-field col s3">
            <input placeholder="Buscar vendedor" id="SearchSeller" name="SearchSeller" type="text" class="validate">
        </div>
    </div>
</form>

<div class="row">
    <div class="col s1 m1 l1 center-align">
        <a class="black-text" href='@Url.Action("Create", "sellers")'><i class="material-icons icon medium">add_circle</i></a>
    </div>
</div>


<table class="striped" id="sellerList">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.names)</td>
                <td>@Html.DisplayFor(modelItem => item.last_names)</td>
                <td>@Html.DisplayFor(modelItem => item.address)</td>
                <td>@Html.DisplayFor(modelItem => item.phone_number)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>
                    <a class="black-text" href='@Url.Action("Edit", "sellers", new { id = item.id_seller })'><i class="material-icons">edit</i></a>
                </td>
                <td>|</td>
                <td>
                    <a class="black-text" href='@Url.Action("Delete", "sellers", new { id = item.id_seller})'><i class="material-icons">delete</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>