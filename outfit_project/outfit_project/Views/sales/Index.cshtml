@model IEnumerable<outfit_project.Models.sale>

@{
    ViewBag.Title = "Index";
}
<h2>Ventas</h2>

<form class="col s6">
    <div class="row">
        <div class="input-field col s3">
            <input placeholder="Buscar Venta" id="SearchVenta" name="SearchVenta" type="text" class="validate">
        </div>
    </div>
</form>

<div class="row">
    <div class="col s1 m1 l1 center-align">
        <a class="black-text" href='@Url.Action("Create", "sales")'><i class="material-icons icon medium">add_circle</i></a>
    </div>
</div>


<table class="striped" id="saleList">
    <thead>
        <tr>
            <th>Fecha Venta</th>
            <th>Total Venta</th>
            <th>Reserva</th>
            <th>Vendedor</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.date.ToString("dd/MM/yyyy")</td>
            <td>@Html.DisplayFor(modelItem => item.total)</td>
            <td>@Html.DisplayFor(modelItem => item.id_reservation)</td>
            <td>@Html.DisplayFor(modelItem => item.seller.names)</td>
            <td>
                <a class="black-text" href='@Url.Action("Edit", "sales", new { id = item.id_sale })'><i class="material-icons">edit</i></a>
            </td>
            <td>|</td>
            <td>
                <a class="black-text" href='@Url.Action("Delete", "sales", new { id = item.id_sale})'><i class="material-icons">delete</i></a>
            </td>
        </tr>
        }
    </tbody>

</table>