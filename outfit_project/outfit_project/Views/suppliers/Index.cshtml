@model IEnumerable<outfit_project.Models.supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Proveedores</h2>

<form class="col s6">
    <div class="row">
        <div class="input-field col s3">
            <input placeholder="Buscar proveedor" id="SearchSupplier" name="SearchSupplier" type="text" class="validate">
        </div>
    </div>
</form>

<div class="row">
    <div class="col s1 m1 l1 center-align">
        <a class="black-text" href='@Url.Action("Create", "suppliers")'><i class="material-icons icon medium">add_circle</i></a>
    </div>
</div>

<table class="striped" id="supplierList">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Telefono</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.name)</td>
                <td>@Html.DisplayFor(modelItem => item.phone_number)</td>
                <td>
                    <a class="black-text" href='@Url.Action("Edit", "suppliers", new { id = item.id_supplier })'><i class="material-icons">edit</i></a>
                </td>
                <td>|</td>
                <td>
                    <a class="black-text" href='@Url.Action("Delete", "suppliers", new { id = item.id_supplier})'><i class="material-icons">delete</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>