@model IEnumerable<outfit_project.Models.reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Reservas</h2>

<form class="col s6">
    <div class="row">
        <div class="input-field col s3">
            <input placeholder="Buscar Reserva" id="SearchReserva" name="SearchReserva" type="text" class="validate">
        </div>
    </div>
</form>

<div class="row">
    <div class="col s1 m1 l1 center-align">
        <a class="black-text" href='@Url.Action("Create", "reservations")'><i class="material-icons icon medium">add_circle</i></a>
    </div>
</div>


<table class="striped" id="reservationList">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Producto</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.customer.names)</td>
                <td>@Html.DisplayFor(modelItem => item.product.name)</td>
                <td>
                    <a class="black-text" href='@Url.Action("Edit", "reservations", new { id = item.id_reservation })'><i class="material-icons">edit</i></a>
                </td>
                <td>|</td>
                <td>
                    <a class="black-text" href='@Url.Action("Delete", "reservations", new { id = item.id_reservation})'><i class="material-icons">delete</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>